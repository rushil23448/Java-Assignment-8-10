<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.EmployeeController"
          hgap="10" vgap="10" padding="10">
    <Label text="Employee ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="tfEmployeeID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    
    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="tfName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <Label text="Age:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="tfAge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="tfEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <Label text="Department:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="tfDepartment" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    
    <Button text="Create Employee Table" GridPane.rowIndex="5" GridPane.columnIndex="0"
            onAction="#createEmployeeTable"/>
    
    <Button text="Register Employee" GridPane.rowIndex="5" GridPane.columnIndex="1"
            onAction="#registerEmployee"/>
    
    <Button text="View Employees" GridPane.rowIndex="6" GridPane.columnIndex="0"
            onAction="#viewEmployees"/>
    
    <Button text="Update Employee" GridPane.rowIndex="6" GridPane.columnIndex="1"
            onAction="#updateEmployee"/>
</GridPane>
